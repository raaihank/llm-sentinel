{
  "name": "llm-sentinel",
  "version": "1.0.5",
  "description": "A proxy to detect and mask sensitive information in LLM API requests",
  "main": "dist/cli.js",
  "bin": {
    "llmsentinel": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && npm run build:dashboard",
    "build:dashboard": "cd dashboard && npm ci && NODE_ENV=production npm run build && cd ..",
    "build:main": "tsc",
    "dev": "tsx watch src/cli.ts start",
    "dev:dashboard": "cd dashboard && npm run dev",
    "start": "node dist/cli.js start",
    "clean": "rm -rf dist && cd dashboard && rm -rf .next && cd ..",
    "prebuild": "npm run clean",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "link": "npm link",
    "unlink": "npm unlink -g llm-sentinel",
    "llmsentinel": "node dist/cli.js",
    "sentinel": "node dist/cli.js",
    "cli": "node dist/cli.js"
  },
  "keywords": [
    "llm",
    "proxy",
    "security",
    "pii",
    "masking",
    "openai",
    "ollama"
  ],
  "author": "Raihan K.",
  "homepage": "https://github.com/raaihank/llm-sentinel",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raaihank/llm-sentinel.git"
  },
  "bugs": {
    "url": "https://github.com/raaihank/llm-sentinel/issues"
  },
  "engines": {
    "node": ">=18.x"
  },
  "license": "SEE LICENSE IN LICENSE",
  "type": "commonjs",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "commander": "^14.0.0",
    "express": "^5.1.0",
    "http-proxy-middleware": "^3.0.5",
    "llm-sentinel": "^1.0.4",
    "node-notifier": "^10.0.1",
    "pm2": "^6.0.8",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/node-notifier": "^8.0.5",
    "@types/ws": "^8.5.13",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
